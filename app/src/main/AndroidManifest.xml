            android:name=".view.qr.QrResultActivity"
            android:theme="@style/FullScreenTheme"
            android:exported="true"></activity>

        <activity
            android:name=".view.cameraAr.CameraArActivity"
            android:exported="true"
            android:theme="@style/FullScreenTheme">

        </activity>

        <activity
            android:name=".view.ar.ArActivity"
            android:theme="@style/FullScreenTheme"
            android:exported="true">
