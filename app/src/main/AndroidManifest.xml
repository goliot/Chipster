            <!--                <action android:name="android.intent.action.MAIN" />-->

            <!--                <category android:name="android.intent.category.LAUNCHER" />-->
            <!--            </intent-filter>-->
        </activity>

        <service
            android:name=".service.MediaProjectionAccessService"
            android:foregroundServiceType="mediaProjection" />

    </application>

